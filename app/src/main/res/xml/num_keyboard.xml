<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="24%p"
    android:horizontalGap="1%p"
    android:verticalGap="5dp"
    android:keyHeight="60dp">

    <Row>
        <Key android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="2"/>
        <Key android:keyLabel="3"/>
        <Key android:codes="-5" android:isRepeatable="true" android:keyIcon="@drawable/baseline_backspace_24" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="4" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="5"/>
        <Key android:keyLabel="6"/>
        <Key android:keyLabel="*" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="7" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="8"/>
        <Key android:keyLabel="9"/>
        <Key android:keyLabel=" " android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key android:keyLabel="+" android:keyEdgeFlags="left"/>
        <Key android:keyLabel="0"/>
        <Key android:keyLabel="#"/>
        <Key android:codes="-4" android:keyIcon = "@drawable/baseline_subdirectory_arrow_right_24" android:keyEdgeFlags="right"/>
    </Row>

</Keyboard>